<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/back_tire2"
    app:cardCornerRadius="4dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:layoutDirection="rtl"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="2dp"
        android:paddingHorizontal="2dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_flag"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/usa"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/txt_price_arz_sarafi_meli"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gold"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/img_status_arz"
                    android:layout_marginLeft="8dp"
                    android:text="405,600"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_country_arz_sarafi_meli"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray100"
                    android:layout_toLeftOf="@+id/img_flag"
                    android:layout_marginRight="8dp"
                    android:text="دلار آمریکا"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img_status_arz"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_high"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/txt_change_arz"
            android:layout_marginRight="8dp"
            android:textSize="10sp"
            android:textColor="@color/gray600"
            android:text="تغییرات اخیر : 180 تومان کاهش"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>